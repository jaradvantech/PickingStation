<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="140dp"
    android:layout_height="290dp">

    <TextView
        android:id="@+id/editorSegment_textView_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/editorSegment_imageView_selectedDown"
        app:layout_constraintEnd_toEndOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintStart_toStartOf="@+id/editorSegment_imageView_palletDown" />

    <ImageView
        android:id="@+id/editorSegment_imageView_palletUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@mipmap/pallet"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/editorSegment_imageView_palletDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitXY"
        android:src="@mipmap/pallet"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/editorSegment_textView_topDown"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/brick_color_14"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Pallet"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintEnd_toEndOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintStart_toStartOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintTop_toTopOf="@+id/editorSegment_imageView_palletDown" />

    <TextView
        android:id="@+id/editorSegment_textView_topUp"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/brick_color_14"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="Pallet"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:textStyle="normal"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintEnd_toEndOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintStart_toStartOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintTop_toTopOf="@+id/editorSegment_imageView_palletUp" />

    <ImageView
        android:id="@+id/editorSegment_imageView_selectedDown"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintEnd_toEndOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintStart_toStartOf="@+id/editorSegment_imageView_palletDown"
        app:layout_constraintTop_toTopOf="@+id/editorSegment_imageView_palletDown"
        app:srcCompat="@android:color/holo_blue_dark" />

    <ImageView
        android:id="@+id/editorSegment_imageView_selectedUp"
        android:layout_width="104dp"
        android:layout_height="104dp"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintEnd_toEndOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintStart_toStartOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintTop_toTopOf="@+id/editorSegment_imageView_palletUp"
        app:srcCompat="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/editorSegment_textView_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintEnd_toEndOf="@+id/editorSegment_imageView_palletUp"
        app:layout_constraintStart_toStartOf="@+id/editorSegment_imageView_palletUp" />

</android.support.constraint.ConstraintLayout>